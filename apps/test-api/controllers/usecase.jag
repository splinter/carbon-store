var api = require('/modules/usecase-api.js').api;
var uriPattern = '/{context}/usecase/{id}/{action}';
var uriMatcher = new URIMatcher(request.getRequestURI());
var method = request.getMethod();
var options;
var params;
var status;
var log = new Log();
(function() {
    if (method !== 'GET') {
        //Not supported
        response.sendError(402);
        return;
    }
    if (!uriMatcher.match(uriPattern)) {
        response.sendError(404);
        return;
    }
    options = uriMatcher.elements();
    if (!options.id) {
        //Request was not made correctly
        response.sendError(400, 'Request must include  the usecase id');
        return;
    }
    queryArgs = request.getAllParameters('UTF-8');
    if (!queryArgs.app) {
        //Request should include the app name
        response.sendError(400, 'Request must include the destionation application to which the use cases should be copied');
        return;
    }
    if (options.action === 'install') {
    	log.info('Installing usecase '+options.id);
        status = api.install(options.id, queryArgs.app, request, response, session);
    } else if (options.action === 'uninstall') {
    	log.info('Uninstalling usecase '+options.id);
        status = api.uninstall(options.id, queryArgs.app, request, response, session);
    } else {
        response.sendError(404, 'Action is not supported');
    }
    if (!status) {
        response.sendError(500, 'Use case was not installed');
    }
}()); 
